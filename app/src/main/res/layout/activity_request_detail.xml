<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:paddingBottom="40dp">

        <ImageView
            android:id="@+id/request_detail_book_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/request_detail_book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/request_detail_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="italic"
                android:text="Author" />

            <TextView
                android:id="@+id/request_detail_book_synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Synopsis here"/>

            <TextView
                android:id="@+id/request_detail_user_requester_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="Requested By : ..."
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/request_detail_user_receiver_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Received From : ..."
                android:textStyle="bold"/>

        </LinearLayout>

        <!--        <fragment xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--            xmlns:map="http://schemas.android.com/apk/res-auto"-->
        <!--            xmlns:tools="http://schemas.android.com/tools"-->
        <!--            android:id="@+id/map"-->
        <!--            android:name="com.google.android.gms.maps.SupportMapFragment"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="300dp"-->
        <!--            tools:context=".BookDetailActivity" />-->

        <Button
            android:id="@+id/request_detail_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Pickup Location"/>

        <Button
            android:id="@+id/request_detail_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accept this request"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/request_detail_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send SMS to this user"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/teal_200"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</ScrollView>